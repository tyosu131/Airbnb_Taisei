<div class="container">
    <div class="row">
        <%= render 'sidebar' %>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Pricing
                </div>
                <div class="card-body">
                    <%= form_with(model: @property, local: true) do |f| %>
                        <label class="form-label" for="pricing_type">Price</label>
                        <%= f.text_field :price, class:"form-control" %>
                    
                        <div class="text-center">
                            <%= f.submit :Save, class: 'btn btn-primary' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>