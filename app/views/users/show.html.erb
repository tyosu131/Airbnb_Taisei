<div class="container">
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <%= gravatar_for(@user, size: 52) %>
                    <div class="card-header">
                        <h5 class="mb-0">Verification</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><%= @user.email %></p>
                        <p class="card-text"><%= @user.phone_number %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <h2 class="border-bottom pb-2"><%= @user.name %></h2>
            </div>
        </div>
    </div>
</div>